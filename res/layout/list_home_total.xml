<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lay_item"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_shourulabel"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_item2_bg"
        android:text="@string/txt_total_label" />

    <TextView
        android:id="@+id/tv_shouruprice"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_total_price" />

    <TextView
        android:id="@+id/tv_zhichulabel"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_item2_bg"
        android:text="@string/txt_total_label" />

    <TextView
        android:id="@+id/tv_zhichuprice"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_total_price" />

</LinearLayout>