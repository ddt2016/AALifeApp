<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lay_item"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_rank_catid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_rank_catname"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_rank_itemtype"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_rank_itemtype" />

    <TextView
        android:id="@+id/tv_rank_itemname"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:text="@string/txt_rank_itemname" />

    <TextView
        android:id="@+id/tv_rank_count"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:text="@string/txt_rank_count" />

    <TextView
        android:id="@+id/tv_rank_price"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_border_size"
        android:layout_marginLeft="@dimen/list_border_size"
        android:layout_marginRight="@dimen/list_border_size"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:text="@string/txt_rank_price" />

</LinearLayout>
